{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "airbnb",
    "plugins": [
        "react"
    ],
    "settings": {
        "import/extensions": [
            ".js",
            ".jsx"
        ],
        "import/resolver": "webpack"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "comma-dangle": ["error", "always-multiline"]
    }
}